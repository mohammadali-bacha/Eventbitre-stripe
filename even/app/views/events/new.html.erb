<h1>New Event</h1>

<div class="conteneur">
<form action="<%= events_create_path %>" method= "POST" >
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="form-group">
    <label for="date">Date</label>
    <input type="datetime" class="form-control" id="date" style="width:200px; margin-left:0 auto;">
  </div>
  <div class="form-group">
    <label for="place">Place</label>
    <input type="place" class="form-control" id="place" style="width:200px; margin-left:0 auto;">
  </div>
  <label for="description">Description</label>
  <div class="form-group">

    <textarea name="description" style="width:200px; height: 200px;"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>



<%= link_to 'Back', root_path %>
